<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (!orders.length){ %>
                <h1>No order  placed</h1> 
            <% } else { %>
                <h1>Your orders:</h1>
                <ul>
                    <% orders.forEach(order => { %>
                        <li>
                            <h2># <%= order.id %></h2>
                            <ul>
                                <% order.products.forEach(product => { %>
                                    <li> <%= product.title %> (<%= product.orderItem.quantity %>) </li>
                                <% }); %>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %> 
        </main>
        <%- include('../includes/end.ejs') %>